<!DOCTYPE html>
<html>
	<head>
  		<title>MetroStore</title>
  		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  		<%= csrf_meta_tags %>
	</head>
	<body>
  <div id="custom-bootstrap-menu" class="navbar navbar-default " role="navigation">
    <div class="container-fluid">
        <div class="navbar-header"><a class="navbar-brand" href="<%= root_url %>">Metro Store</a>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-menubuilder"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse navbar-menubuilder">
            <ul class="nav navbar-nav navbar-left">
                <li><%= link_to "Stores", stores_path %>
                </li>
                <li><%= link_to "Store Categories", store_categories_path %>
                </li>
                <li><%= link_to "Product Categories", product_categories_path %>
                </li>
                <li><%= link_to "Products", products_path %>
                </li>
            </ul>
        </div>
    </div>
</div>
     	<p class="notice"><%= notice %></p>
     	<p class="alert"><%= alert %></p>

		<%= yield %>

	</body>
</html>
